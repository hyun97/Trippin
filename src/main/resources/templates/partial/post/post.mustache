{{#post}}
    <div class="col s12 m6 l6 xl4">
        <div class="card">
            <div class="card-image">
                <img src="/img/{{image}}">
                <span class="card-title">{{region}}</span>
                <a class="btn-floating halfway-fab waves-effect waves-light red bookmark-btn"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <p class="author">{{name}}</p>
                <p>{{content}}</p>
                <div class="card-social">
                    <i class="small material-icons favorite">favorite_border</i>
                    <i class="small material-icons follow">person_add</i>
                    <div class="favorite-count">좋아요 {{favorite}}개</div>
                    <a href="/card-detail" class="comment-count">댓글 123개</a>
                </div>
            </div>
        </div>
    </div>
{{/post}}