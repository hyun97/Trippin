{{>layout/header}}

<div class="container">
    <h1 class="index-title">{{country.name}}</h1>
    <div class="row card-wrapper">
        {{#post}}
            <div class="col s12 m6 l6 xl4">
                <div class="card z-depth-4">
                    <a href="/post/{{id}}">
                        <div class="card-image">
                            <img src="/img/{{image}}">
                            <span class="card-title">{{region}}</span>
                        </div>
                    </a>
                    {{#isLogin}}
                        <span class="user-id" style="display: none">{{loginUser.id}}</span>
                        {{^validBookmark}}
                            <a id="{{id}}"
                               class="hoverable bookmark btn-floating halfway-fab waves-effect waves-light red">
                                <i class="material-icons">bookmark_border</i>
                            </a>
                        {{/validBookmark}}
                        {{#validBookmark}}
                            <a id="{{id}}"
                               class="hoverable bookmark btn-floating halfway-fab waves-effect waves-light red">
                                <i class="material-icons">bookmark</i>
                            </a>
                        {{/validBookmark}}
                        {{#validUser}}
                            <div class="edit-wrapper">
                                <span class="edit" id="{{id}}"><i class="material-icons">create</i></span>
                                <span class="delete" id="{{id}}"><i class="material-icons">close</i></span>
                            </div>
                        {{/validUser}}
                    {{/isLogin}}
                    <div class="card-content">
                        <a href="/user/{{country.user.id}}" class="author black-text">{{country.user.name}}</a>
                        <p>{{content}}</p>
                        <div class="card-social">
                            {{^validFavorite}}
                                <i id="{{id}}" class="small material-icons favorite">favorite_border</i>
                            {{/validFavorite}}
                            {{#validFavorite}}
                                <i id="{{id}}" class="small material-icons favorite red-text">favorite</i>
                            {{/validFavorite}}
                            {{^validUser}}
                                {{^validFollow}}
                                    <i id="{{user.id}}" class="small material-icons follow">person_add</i>
                                {{/validFollow}}
                                {{#validFollow}}
                                    <i id="{{user.id}}" class="small material-icons follow blue-text text-darken-3">record_voice_over</i>
                                {{/validFollow}}
                            {{/validUser}}
                            <div class="favorite-count">좋아요 <span id="{{id}}">{{favorite}}</span>개</div>
                            <a href="/post/{{id}}" class="comment-count">댓글 999개</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/post}}
    </div>
</div>

{{>layout/footer}}

